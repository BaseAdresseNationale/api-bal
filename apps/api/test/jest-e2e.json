{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "testTimeout": 1200000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/lib/(.*)$": "<rootDir>/../src/lib/$1",
    "^@/modules/(.*)$": "<rootDir>/../src/modules/$1",
    "^@/shared/(.*)$": "<rootDir>/../../../libs/shared/src/$1"
  }
}